{
  "name": "directed-stack-template",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf ./node_modules/.cache ./api ./build ./public/build \"./app/styles/**/*.css\"",
    "new:prebuild": "npm run clean && echo All clean âœ¨",
    "build": "run-s build:*",
    "build:css": "tailwindcss -m -i ./styles/global.css -o app/styles/global.css",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "tailwindcss -w -i ./styles/global.css -o app/styles/global.css",
    "dev:remix": "remix dev",
    "setup": "yarn && yarn --cwd directus",
    "start:directus": "cd directus && npx directus start"
  },
  "dependencies": {
    "@directus/sdk": "^10.1.5",
    "@headlessui/react": "^1.7.3",
    "@heroicons/react": "^2.0.13",
    "@markdoc/markdoc": "^0.2.1",
    "@remix-run/node": "^1.7.4",
    "@remix-run/react": "^1.7.4",
    "@remix-run/vercel": "^1.7.4",
    "@vercel/node": "^2.6.1",
    "classnames": "^2.3.2",
    "date-fns": "^2.29.3",
    "prism-react-renderer": "^1.3.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-seo": "^0.1.0",
    "remix-utils": "^3.4.0",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.4",
    "@remix-run/eslint-config": "^1.7.4",
    "@remix-run/serve": "^1.7.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.7",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.13",
    "daisyui": "^2.38.0",
    "eslint": "^8.26.0",
    "new-directus-schema-builder-kit": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "reading-time": "^1.5.0",
    "rimraff": "^0.0.1-security",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.8.4",
    "wait-on": "^6.0.1"
  },
  "engines": {
    "node": ">=14"
  }
}
